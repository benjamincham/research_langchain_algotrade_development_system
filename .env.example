# LLM Provider Credentials
# Copy this file to .env and fill in your actual API keys
# DO NOT commit .env to git (it's in .gitignore)

# ============================================================================
# OpenAI
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...  # Optional
OPENAI_BASE_URL=  # Optional, for custom endpoints

# ============================================================================
# Anthropic (Claude)
# ============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# ============================================================================
# Google (Gemini)
# ============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=AIza...

# ============================================================================
# Azure OpenAI
# ============================================================================
# Get credentials from Azure Portal
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================================================
# AWS Bedrock
# ============================================================================
# Use AWS IAM credentials
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# ============================================================================
# Groq (Fast inference)
# ============================================================================
# Get your API key from: https://console.groq.com/
GROQ_API_KEY=gsk_...

# ============================================================================
# Together AI
# ============================================================================
# Get your API key from: https://api.together.xyz/
TOGETHER_API_KEY=...

# ============================================================================
# LLM Routing Configuration
# ============================================================================
# Strategy: fallback, cost_optimized, or dynamic
LLM_ROUTING_STRATEGY=fallback

# For dynamic strategy, specify the model to use at runtime
# Options: gpt-4o, gpt-4o-mini, claude-3-5-sonnet, claude-3-5-haiku, 
#          gemini-2.0-flash, llama-3.3-70b
DYNAMIC_LLM_MODEL=gpt-4o-mini

# ============================================================================
# Application Settings
# ============================================================================
LOG_LEVEL=INFO
ENVIRONMENT=development
